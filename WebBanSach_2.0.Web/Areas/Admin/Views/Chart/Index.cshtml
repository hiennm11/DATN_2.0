@model AdminChartResponse
@{
    ViewBag.Title = "Index";
    var areaLabels = string.Join(",", Model.AreaChart.Date);
    var areaData = string.Join(",", Model.AreaChart.DateEarning);
    var maxAreaData = Model.AreaChart.DateEarning.Max();

    var barLabels = string.Join(",", Model.BarChart.Date);
    var barData = string.Join(",", Model.BarChart.DateEarning);
    var maxBarData = Model.BarChart.DateEarning.Max();

    var pieLabels = string.Join(",", Model.PieChart.Roles);
    var pieData = string.Join(",", Model.PieChart.Percentage);
}
<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/admin">Trang chủ</a>
    </li>
    <li class="breadcrumb-item active">Tổng quan</li>
</ol>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Biểu đồ</h1>

    <!-- Content Row -->
    <div class="row">

        <div class="col-xl-8 col-lg-7">

            <!-- Area Chart -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Doanh thu tuần này</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                        <canvas id="myAreaChart" style="display: block; width: 668px; height: 320px;" width="668" height="320" class="chartjs-render-monitor"></canvas>
                    </div>
                    <hr>
                </div>
            </div>

            <!-- Bar Chart -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Doanh thu 6 tháng</h6>
                </div>
                <div class="card-body">
                    <div class="chart-bar">
                        <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                        <canvas id="myBarChart" width="668" height="320" class="chartjs-render-monitor" style="display: block; width: 668px; height: 320px;"></canvas>
                    </div>
                    <hr>
                </div>
            </div>

        </div>

        <!-- Donut Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Nhân sự</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-pie pt-4">
                        <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                        <canvas id="myPieChart" width="301" height="253" class="chartjs-render-monitor" style="display: block; width: 301px; height: 253px;"></canvas>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryex")
    <script src="~/Areas/Admin/Content/js/charts.js"></script>
    <script>
        renderAreaChart([@Html.Raw(areaLabels)], [@areaData],@maxAreaData);
        renderBarChart([@Html.Raw(barLabels)], [@barData],@maxBarData);
        renderPieChart([@Html.Raw(pieLabels)], [@pieData]);
    </script>
}
