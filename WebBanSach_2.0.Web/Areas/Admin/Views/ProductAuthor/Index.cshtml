@model IEnumerable<IGrouping<string, string>>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
    var orderList = (WebBanSach_2_0.Web.Infrastructure.Pagination.IndexViewModel<IGrouping<string, string>>)ViewBag.List;

}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Dashboard")">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">Quản lý</li>
    <li class="breadcrumb-item active">Tác giả</li>
</ol>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Danh sách
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-8 col-md-4">
                <button id="btnCreate" class="btn btn-info" role="button">Tạo mới</button>
            </div>

            <div class="col-sm-8 col-md-4">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Tìm kiếm</span>
                    </div>
                    <input type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tác phẩm</th>
                        <th>Tác giả</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Tác phẩm</th>
                        <th>Tác giả</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody id="dataTableBody">
                    @foreach (var item in orderList.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Key)
                            </td>
                            <td>
                                @foreach (var author in item)
                                {
                                    <div>@author</div>
                                }
                            </td>
                            <td>
                                <button class="btn btn-outline-light open-delete-modal" data-id="@item.Key">
                                    <i class="fas fa-fw fa-trash-alt" style="color: red"></i>
                                </button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="row">
                <div class="col-sm-12 col-md-5">
                    <div class="dataTables_info" id="dataTable_info" role="status" aria-live="polite">

                    </div>
                </div>
                <div class="col-sm-12 col-md-7">
                    <!-- pager -->
                    <ul class="pagination" id="paged">
                        @if (orderList.Pager.CurrentPage > 1)
                        {
                            <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { @page = 1 })">First</a></li>
                            <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { @page = orderList.Pager.CurrentPage - 1 })"> Previous</a></li>
                        }
                        @for (int i = orderList.Pager.StartPage; i <= orderList.Pager.EndPage; i++)
                        {
                            if (i == orderList.Pager.CurrentPage)
                            {
                                <li class="page-item active"><a class="page-link" href="@Url.Action("Index",new { @page = @i })">@i</a></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { @page = @i })">@i</a></li>
                            }
                        }
                        @if (orderList.Pager.CurrentPage < orderList.Pager.TotalPages)
                        {
                            <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { @page = orderList.Pager.CurrentPage + 1 })"> Next</a></li>
                            <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { @page = orderList.Pager.TotalPages })"> Last</a></li>
                        }
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm())
            {

                <div class="modal-body" id="modal-body">

                    @Html.AntiForgeryToken()
                    <input data-val="true" type="number" name="id" id="modelID" value="0" hidden />
                    <p><h4>Are you sure to delete <span class="text-danger" id="modelName"></span> ?</h4></p>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger" id="deleteDetail">Delete</button>

                </div>
            }
        </div>
    </div>
</div>

<!-- Create Modal-->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <i class="far fa-edit"></i>
                Create or Edit
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="createForm">
                <div class="modal-body" id="modal-body">
                    <div class="form-horizontal">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Product Name</label>
                            @Html.DropDownList("productID", (IEnumerable<SelectListItem>)ViewBag.ProductIds, new { @class = "form-control", @id = "productListID", @onchange = "searchAuthorOnchange()" })
                        </div>
                        <div class="form-group">

                            <input type="text" class="form-control" placeholder="Search author name" id="authorTags" onchange="searchAuthorOnchange()" />
                        </div>

                        <div class="form-group">
                            <div class="list-group" id="listAuthor">
                                @*@foreach(var item in ViewBag.Authors)
                        {
                            <li class="form-check">
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input" name="author" value=@item.ID>@item.Name
                                </label>
                            </li>
                        }*@
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" value="Assign Product Author" class="btn btn-success" id="submitCreate"/>
                </div>
            </form>
        </div>       
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/admin/extensions/authors-admin")
}


