
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Admin">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Author</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="far fa-edit"></i>
        Create or Edit
    </div>
    <div class="card-body">

        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Product Name</label>
                    @Html.DropDownList("productID", (IEnumerable<SelectListItem>)ViewBag.ProductIds, new { @class = "form-control", @id = "productListID", @onchange = "searchAuthorOnchange()" })
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" id="authorTags" onchange="searchAuthorOnchange()" />
                </div>

                <div class="form-group">
                    <div class="list-group" id="listAuthor">
                        @*@foreach(var item in ViewBag.Authors)
                            {
                                <li class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" name="author" value=@item.ID>@item.Name
                                    </label>
                                </li>
                            }*@
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Assign Product Author" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>

    </div>
</div>
@Scripts.Render("~/bundles/admin/extensions/authors-admin")
