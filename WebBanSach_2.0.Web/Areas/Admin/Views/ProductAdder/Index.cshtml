@model Pagination.IndexViewModel<ProductAdderVM>
@{
    ViewBag.Title = "Index";
    //var categories = new SelectList(ViewBag.Categories, "CategoryId", "CategoryName");
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Dashboard")">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">Quản lý</li>
    <li class="breadcrumb-item active">Nhập hàng</li>
</ol>
@if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
{
    @Html.Raw(ViewBag.StatusMessage)
}
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Danh sách hàng nhập
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-8 col-md-4">
                <a href="@Url.Action("Create")" id="btnCreate" class="btn btn-info" role="button">Tạo mới</a>
            </div>
            @using (Html.BeginForm("Index", "Product", FormMethod.Get, new { @class = "col-sm-12 col-md-8" }))
            {
                <div class="row">
                    @*<div class="col">
                        @Html.DropDownList("CategoryId", (IEnumerable<SelectListItem>)categories, "Loại sản phẩm", new { @class = "form-control" })
                    </div>*@
                    <div class="col">
                        <div class="input-group mb-3">
                            <input type="text" name="search" class="form-control" value="@ViewBag.SearchString">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Thể loại</th>
                        <th>Giá mua</th>
                        <th>Số lượng mua</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Thể loại</th>
                        <th>Giá mua</th>
                        <th>Số lượng mua</th>
                    </tr>
                </tfoot>
                <tbody id="dataTableBody">
                    @foreach (var item in Model.Items)
                    {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.CategoryId</td>
                        <td>@item.Price</td>
                        <td>@item.AvailableQuantity</td>
                    </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                @{ Html.RenderPartial("_Pager", Model.Pager); }
            </div>
        </div>
    </div>
</div>


@section scripts {
    
}