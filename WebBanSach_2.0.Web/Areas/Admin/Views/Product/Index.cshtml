@model WebBanSach_2_0.Model.ResponseModels.AdminListProductResponse
@{
    ViewBag.Title = "Index";

    var pager = Model.Products.Pager;
    var catelist = Model.Categories as List<CategoryVM>;
    catelist.Add(new CategoryVM { CategoryId = 0, CategoryName = "Tất cả" });
    var cate = new SelectList(catelist.OrderBy(m => m.CategoryId), "CategoryId", "CategoryName");
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Dashboard")">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">Quản lý</li>
    <li class="breadcrumb-item active">Sản phẩm</li>
</ol>
@if (ViewData["Message"] != null)
{
    <p class="text-success">@ViewData["Message"].ToString()</p>
}
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Quản lý sản phẩm
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-8 col-md-4">
                <a href="@Url.Action("Details")" id="btnCreate" class="btn btn-info" role="button">Tạo mới</a>
            </div>
            <div class="col-sm-8 col-md-4">
                @Html.DropDownList("Category", (IEnumerable<SelectListItem>)cate, new { @class = "form-control" })
                @*<div class="dropdown-menu form-control">
                        <a class="dropdown-item" href="#">Tất cả</a>
                        @foreach (var item in catelist)
                        {
                            <a class="dropdown-item" href="#">@item.CategoryName</a>
                        }
                        <a class="dropdown-item" href="#">Link 2</a>

                    </div>*@
            </div>
            <div class="col-sm-8 col-md-4">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Tìm kiếm</span>
                    </div>
                    <input type="text" class="form-control" id="searchDetail">
                </div>
            </div>
        </div>

        @if (Model.Products == null)
        {

        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Thể loại</th>
                            <th>Hình ảnh</th>
                            <th>Giá bán</th>
                            <th>Lượng mua</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Thể loại</th>
                            <th>Hình ảnh</th>
                            <th>Giá bán</th>
                            <th>Lượng mua</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody id="dataTableBody">
                        @foreach (var item in Model.Products.Items)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Category.CategoryName</td>
                                <td><img src="@item.Image" style="height:100px; width:90px;border: solid 1px" /></td>
                                <td>@(String.Format("{0:0,0}", item.Price)).đ</td>
                                <td>@item.Purchase</td>
                                <td>@(item.Status == true ? "Còn hàng": "Hết hàng")</td>
                                <td>
                                    <a href="@Url.Action("Details", new { @productId = item.ProductId })" class="btn btn-outline btn-edit" data-page="0" data-id="@item.ProductId"><i class="fas fa-pencil-alt" style="color: blue"></i></a>
                                    <button class="btn btn-outline-light open-delete-modal" data-id="@item.ProductId" data-name="@item.Name">
                                        <i class="fas fa-fw fa-trash-alt" style="color: red"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-sm-12 col-md-5">
                        <div class="dataTables_info" id="dataTable_info" role="status" aria-live="polite">

                        </div>
                    </div>
                    <div class="col-sm-12 col-md-7">
                        <!-- pager -->
                        <ul class="pagination" id="paged">
                            @if (pager.CurrentPage > 1)
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { @page = 1 })">First</a></li>
                                <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { @page = pager.CurrentPage - 1 })"> Previous</a></li>
                            }
                            @for (int i = pager.StartPage; i <= pager.EndPage; i++)
                            {
                                if (i == pager.CurrentPage)
                                {
                                    <li class="page-item active"><a class="page-link" href="@Url.Action("Index",new { @page = @i })">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { @page = @i })">@i</a></li>
                                }
                            }
                            @if (pager.CurrentPage < pager.TotalPages)
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { @page = pager.CurrentPage + 1 })"> Next</a></li>
                                <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { @page = pager.TotalPages })"> Last</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Create Modal-->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <i class="far fa-edit"></i>
                Create or Edit
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="createForm" method="post" enctype="multipart/form-data" onsubmit="return SaveProduct(this)">
                @*@Html.AntiForgeryToken()*@
                <div class="modal-body" id="modal-body">
                    <div class="form-horizontal row">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.Hidden("ID")
                        @Html.Hidden("Purchase")
                        @Html.Hidden("Star")
                        @Html.Hidden("UpdateBy")
                        @Html.Hidden("CreateBy")
                        @Html.Hidden("CreateDate")
                        @Html.Hidden("UpdatedDate")

                        <div class="col-md-7">
                            <div class="form-group">
                                @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-5" })
                                <div class="col-md-10">
                                    @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
                                    <div class="text-danger">@ViewBag.ErrorMessage</div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("CateID", htmlAttributes: new { @class = "control-label col-md-5" })
                                <div class="col-md-10">
                                    @Html.DropDownList("CateID", (IEnumerable<SelectListItem>)cate, new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessage("CateID", "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-5" })
                                <div class="col-md-10">
                                    @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessage("Description", "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Price", htmlAttributes: new { @class = "control-label col-md-5" })
                                <div class="col-md-10">
                                    @Html.Editor("Price", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessage("Price", "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-5" for="Status">
                                    <input type="checkbox" id="Status" name="Status" value="true">
                                    Status
                                </label>
                            </div>
                        </div>

                        <div class="col-md-5">
                            <div class="form-group">
                                <div class="col-md-10">
                                    <img id="productImg" src="" style="border:solid;height:350px;width:100%" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="file" id="file" name="file" class="form-control-file border" accept="image/*">
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-success" id="saveData" value="Save" />"
                </div>
            </form>

        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("DeleteConfirmed", "Product"))
            {
                <div class="modal-body" id="modal-body">
                    @Html.AntiForgeryToken()
                    <input data-val="true" type="number" name="id" id="modelID" value="0" hidden />
                    <p><h4>Are you sure to delete <span class="text-danger" id="modelName"></span> ?</h4></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger" id="deleteDetail">Delete</button>

                </div>
            }
        </div>
    </div>
</div>



@section scripts {
    <script>
        (function () {
            $("#content-wrapper").off('click', '.open-delete-modal').on('click', '.open-delete-modal', function () {
                $("#deleteModal").modal('show');
                $("#modelID").val($(this).data("id"));
                $("#modelName").html($(this).data("name"));
            });
        })();
    </script>
}