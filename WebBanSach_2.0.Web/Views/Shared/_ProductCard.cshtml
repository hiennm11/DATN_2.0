@model ProductVM

<div class="card mb-4 box-shadow text-center">
    <a href="/chi-tiet/@Model.NameAlias">
        <img class="card-img" style="width:100%;height:245px" src="@(!string.IsNullOrEmpty(Model.Image) ? Model.Image : "/img/noCover.jpg")" alt="@Model.Name">
    </a><br />
        <div class="card-body">
            @if (Model.Name.Length > 25)
            {
                <a href="/chi-tiet/@Model.NameAlias">
                    <h6 class="card-title">
                        @Model.Name.Substring(0, 25) ...
                    </h6>
                </a>
            }
            else
            {
                <a href="/chi-tiet/@Model.NameAlias">
                    <h6 class="card-title">@Model.Name</h6>
                </a>
            }

            @if (Model.Discount.DiscountValue > 0)
            {
                <div class="price text-success"><h5 class="mt-4">@(String.Format("{0:0,0}", (Model.Price * (100 - Model.Discount.DiscountValue)/100))).đ</h5>
                                                <del class="price text-muted">@(String.Format("{0:0,0}", Model.Price)).đ</del>
                </div>                
            }
            else
            {
                <div class="price text-success"><h5 class="mt-4">@(String.Format("{0:0,0}", Model.Price)).đ</h5>
                                                <span class="price text-muted">&nbsp;&nbsp;&nbsp;</span>
                </div>
                
            }
            <button class="btn btn-danger mt-3 text-light add-to-cart" data-nameid="@Model.NameAlias"><i class="fas fa-shopping-cart"></i> Add to Cart</button>
        </div>
</div>

