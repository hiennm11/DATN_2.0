@model WebBanSach_2_0.Web.Models.IndexViewModel
@{
    ViewBag.Title = "Quản lý tài khoản";
    var client = (WebBanSach_2_0.Web.Models.ClientViewModel)ViewBag.Client;
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Đổi mật khẩu", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
    </dl>
    <hr />
    @using (Html.BeginForm("UpdateUser", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Thông tin tài khoản.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Họ và tên", new { @class = "col-md-6 control-label" })
            <div class="col-md-11">
                @Html.TextBox("FullName", client.FullName, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    @Html.Label("Email", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBox("Email", client.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Địa chỉ", new { @class = "col-md-6 control-label" })
                    <div class="col-md-10">
                        @Html.TextBox("Address", client.Address, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.Label("Điện thoại", new { @class = "col-md-6 control-label" })
                    <div class="col-md-10">
                        @Html.TextBox("PhoneNumber", client.PhoneNumber, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Ngày sinh", new { @class = "col-md-6 control-label" })
                    <div class="col-md-10">
                        @Html.TextBox("Dob", client.Dob, "{0:yyyy-MM-dd}" , new { @class = "form-control", @type = "date" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-success" value="Cập nhật thông tin" />
                <a class="btn btn-secondary" href="/">Về trang chủ </a>

            </div>
        </div>
    }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}